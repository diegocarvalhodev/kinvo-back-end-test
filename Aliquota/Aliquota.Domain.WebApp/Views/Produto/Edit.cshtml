@model Aliquota.Domain.Models.Produto

@{
    ViewData["Title"] = "Edição";
}

<h1>Produto - Edição</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="TaxaRendimentoAnual" class="control-label"></label>
                <input type="number"
                       asp-for="TaxaRendimentoAnual"
                       class="form-control"
                       value="@(Model.TaxaRendimentoAnual.ToString().Replace(",", "."))" />
                <span asp-validation-for="TaxaRendimentoAnual" class="text-danger"></span>

            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary m-1" />
                <a asp-action="Index" class="btn btn-light m-1" >Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
